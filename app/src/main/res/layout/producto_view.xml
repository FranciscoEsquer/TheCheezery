<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/productoimg"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/caramelfrap"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/productonombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caramel Frap"
            android:textColor="#B60089"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            />

        <TextView
            android:id="@+id/productodesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion del producto"
            android:textColor="#262525"
            android:textSize="8sp"
            android:fontFamily="sans-serif-light"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/productoprecio"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="$5.00"
        android:textColor="#9E2E81"
        android:textSize="19sp"
        android:fontFamily="sans-serif-medium"
        />

</LinearLayout>